  <script>
    // script.js
    document.getElementById('submitButton').addEventListener('click', function () {
      const inputDate = document.getElementById('dateInput').value;
      const correctDate = '2023-01-27'; // Your special date
      
      const container = document.getElementById('container');
      const error = document.getElementById('error');
      const messageContainer = document.getElementById('messageContainer');

      // Always remove shake to reset animation
      container.classList.remove('shake');

      if (inputDate === correctDate) {
        // SUCCESS
        error.classList.add('hidden');
        // Add class to trigger success animation
        container.classList.add('success-open');
        
        // Wait for animation to finish, then swap content
        setTimeout(() => {
          container.classList.add('hidden');
          messageContainer.classList.remove('hidden');
        }, 1000); // 1s animation duration

      } else {
        // FAILURE
        error.classList.remove('hidden');
        messageContainer.classList.add('hidden');
        // Add class to trigger shake animation
        container.classList.add('shake');
        
        // Optional: remove shake class after animation finishes
        // so it can shake again on the next wrong guess
        setTimeout(() => {
          container.classList.remove('shake');
        }, 600); // 0.6s animation duration
      }
    });
  </script>
